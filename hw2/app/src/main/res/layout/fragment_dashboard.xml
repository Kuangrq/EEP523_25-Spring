<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/magneticX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetic X: 0.00"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/magneticY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetic Y: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/magneticX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/magneticZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetic Z: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/magneticY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximity: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/magneticZ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/gyroX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro X: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/proximity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/gyroY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro Y: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/gyroX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gyroZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro Z: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/gyroY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- TODO: Add Text View to display values -->

</RelativeLayout>